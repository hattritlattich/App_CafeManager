<UserControl x:Class="AppQLQuanCaPhe.AddProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppQLQuanCaPhe"
             mc:Ignorable="d" Height="150" Width="110">
    <Border BorderBrush="Black" BorderThickness="0.3" CornerRadius="10" Padding="5"  Background="#EDC7B7">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <WrapPanel x:Name="productPanel" Background="#EDC7B7" RenderTransformOrigin="0.517,0.365" Margin="0,0,0,0">
                    <Image x:Name="txtimg" Height="80" Width="95" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </WrapPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"  Background="#EDC7B7">
                    <TextBlock x:Name="txtName" Text="TextBlock" TextWrapping="Wrap" TextAlignment="Center" FontSize="12" />
                    <TextBlock x:Name="txtSize" Text="" TextWrapping="Wrap" TextAlignment="Center" FontSize="10" />
                    <TextBlock x:Name="txtGia" Text="" TextWrapping="Wrap" TextAlignment="Center" FontSize="12" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
